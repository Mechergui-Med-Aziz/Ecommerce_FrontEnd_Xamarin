<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceApp.Pages.ProductDetailPage"
             Title="Product Detail">
    <ScrollView>
        <StackLayout Padding="20">
            <Entry x:Name="NameEntry" Placeholder="Product Name" />
            <Editor x:Name="DescriptionEditor" Placeholder="Product Description" HeightRequest="100" />
            <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
            <Button Text="Save" Clicked="OnSaveClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>