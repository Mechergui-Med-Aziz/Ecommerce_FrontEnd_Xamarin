<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceApp.Pages.ProfilePage"
             Title="Profile">
    <StackLayout Padding="20">
        <Label x:Name="UsernameLabel" FontSize="Large" FontAttributes="Bold" />
        <Label x:Name="EmailLabel" />
        <Button Text="View Orders" Clicked="OnViewOrdersClicked" />
        <Button Text="Logout" Clicked="OnLogoutClicked" BackgroundColor="{StaticResource SecondaryColor}" />
    </StackLayout>
</ContentPage>