<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceApp.Pages.ProductAdd">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Entry x:Name="name" Placeholder="Product Name" />
            <Entry x:Name="description" Placeholder="Description" />
            <Entry x:Name="price" Placeholder="Price" Keyboard="Numeric" />
            <Button Text="Ajouter" Clicked="OnAddClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>